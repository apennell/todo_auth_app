<h3>Sign up!</h3>

<!-- error message -->
<% flash.each do |key, value| %>
   <%= content_tag :div, value, class: "flash #{key}" %>
<% end %>

<!-- form for new user -->
<%= form_for @user do |f| %>

  <%= f.label :username %><br>
  <%= f.text_field :username %><br>

  <%= f.label :password %><br>
  <%= f.password_field :password %><br>

  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %><br>

  <%= f.submit "Signup" %>

<% end %>